<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Doan.View.SignInPage">
    <StackLayout Margin="10">
        <StackLayout>
            <Label FontAttributes="Bold" FontSize="24"
                Text="StockX" HorizontalOptions="Center"/>
        </StackLayout>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackLayout BackgroundColor="BlanchedAlmond" Grid.Column="0">
                <Label Text="Login" HorizontalOptions="Center"/>
            </StackLayout>
            <StackLayout BackgroundColor="BlanchedAlmond" Grid.Column="1">
                <Label Text="Sig Up" HorizontalOptions="Center"/>
            </StackLayout>
        </Grid>
        <StackLayout>
            <Entry x:Name="usernameEn"  Placeholder ="Username"/>
            <Entry x:Name="passwordEn" Placeholder="Password"/>
            <Button Text="Log In" BackgroundColor="LightGray"
                    TextColor="White" x:Name="submit" Clicked="submit_Clicked"/> 
        </StackLayout>
    </StackLayout>
</ContentPage>

